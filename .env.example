# Execution mode: "paper" or "live"
MODE=paper

# Polymarket API (populate when you have credentials)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
# Wallet credentials for order signing (if required)
POLYMARKET_WALLET_ADDRESS=
POLYMARKET_PRIVATE_KEY=

# Strategy parameters
THRESHOLD_ENTRY=0.51
DIP_THRESHOLD_POINTS=10
POSITION_SIZE_USD=100

# Time windows (hours to resolution)
WINDOW_OUTER_HOURS=48
WINDOW_INNER_HOURS=12

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=data/signals.jsonl

# Health check (Railway uses this)
HEALTH_CHECK_PORT=8080
